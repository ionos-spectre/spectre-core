{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Run spectre",
          "type": "shell",
          "command": "spectre",
          "args": [
              "-e", "${input:environment}"
          ],
          "options": {
            "cwd": "${workspaceFolder}/${input:project}"
          },
          "group": {
              "kind": "test",
              "isDefault": true
          },
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
      }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "project",
      "description": "Type spectre project to run"
    },
    {
      "type": "promptString",
      "id": "environment",
      "default": "default",
      "description": "Type test environment config"
    }
  ]
}