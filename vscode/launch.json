    "version": "0.2.0",
    "configurations": [
        {
          "name": "Run spectre",
          "type": "Ruby",
          "request": "launch",
          "program": "path/to/spectre.rb",
          "args": [
            "-e", "${input:environment}"
          ],
          "cwd": "${workspaceFolder}/${input:project}"
        }
    ],
    "inputs": [
      {
        "type": "promptString",
        "id": "project",
        "description": "Type spectre project to run"
      },
      {
        "type": "pickString",
        "id": "environment",
        "default": "default",
        "description": "Select environment",
        "options": ["default", "development", "production"]
      }
    ]
}